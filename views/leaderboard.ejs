<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <style>
        body{
        text-align: center;
        display: flex;
        flex-direction: column;
        
        
        padding: auto;
        color: #f2f2f2;
        height: 100vh;
        background-image: linear-gradient(45deg,#c40094,#09001d) ;
        background-repeat:no-repeat ;
    }
      table {
        width: 70%;
        border-collapse: collapse;
        margin-bottom: 20px;
        margin: 10px auto;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #09001d;
    }
    .btn-container {
        margin: 20px auto;
        background:transparent ;
        color: white;
        padding: 10px 20px;
        width: 190px;
        border: 1px solid #fff;
        border-radius: 5px;
        cursor: pointer;
    }
    .btn-container a{
        text-decoration: none;
        font-size: 20px;
        font-weight: 600;
        color: #fff;
    }


    .home-btn:hover {
        background-color: #45a049;
    }
    </style>
</head>
<body>
    <h1>Leaderboard</h1>
    <table>
        <thead>
            <tr>
                <th>Rank</th>
                <th>Email</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <% leaderboard.forEach(function(user, index) { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.email %></td>
                    <td><%= user.totalScore %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
    <div class="btn-container">
        <a href="/">Go to Home Page</a>
    </div>
</body>
</html>
